{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalEnv": [
    "BETTER_AUTH_SECRET",
    "BETTER_AUTH_URL",
    "PUBLIC_BETTER_AUTH_URL",
    "DATABASE_URL",
    "POLAR_SERVER",
    "POLAR_ACCESS_TOKEN",
    "SUCCESS_URL",
    "CLOUDFLARE_ACCESS_KEY_ID"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"],
      "env": [
        "BETTER_AUTH_SECRET",
        "BETTER_AUTH_URL",
        "PUBLIC_BETTER_AUTH_URL",
        "DATABASE_URL",
        "POLAR_SERVER",
        "POLAR_ACCESS_TOKEN",
        "SUCCESS_URL",
        "CLOUDFLARE_ACCESS_KEY_ID"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": [
        "BETTER_AUTH_SECRET",
        "BETTER_AUTH_URL",
        "PUBLIC_BETTER_AUTH_URL",
        "DATABASE_URL",
        "POLAR_SERVER",
        "POLAR_ACCESS_TOKEN",
        "SUCCESS_URL",
        "CLOUDFLARE_ACCESS_KEY_ID"
      ]
    }
  }
}