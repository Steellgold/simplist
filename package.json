{
  "scripts": {
      "dev": "open-cli http://localhost:3000 && dotenv -- pnpm --filter=@simplist/* --recursive run dev",
      "build:all": "dotenv -- pnpm --filter=@simplist/* --recursive run build",

      "start:website": "pnpm --filter=@simplist/website run start",
      "start:api": "pnpm --filter=@simplist/api run start",

      "build:website": "dotenv -- pnpm --filter=@simplist/website run build",
      "build:api": "pnpm --filter=@simplist/api run build"
  },
  "dependencies": {
      "dotenv": "^16.4.5",
      "dotenv-cli": "^7.4.1",
      "open-cli": "^8.0.0"
  },
  "engines": {
      "node": ">=20.0.0",
      "pnpm": ">=9.0.0"
  }
}